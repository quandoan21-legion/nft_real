<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="https://jakarta.ee/xml/ns/jakartaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-app_5_0.xsd"
         version="5.0">
    <servlet>
        <servlet-name>GetNft</servlet-name>
        <servlet-class>com.demo.nft.controller.GetNft</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>GetNft</servlet-name>
        <url-pattern>/home</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>CreateNft</servlet-name>
        <servlet-class>com.demo.nft.controller.CreateNft</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CreateNft</servlet-name>
        <url-pattern>/nfts/create</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>UpdateNftServlet</servlet-name>
        <servlet-class>com.demo.nft.controller.UpdateNftServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UpdateNftServlet</servlet-name>
        <url-pattern>/nfts/edit</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ListNftsServlet</servlet-name>
        <servlet-class>com.demo.nft.controller.ListNftsServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ListNftsServlet</servlet-name>
        <url-pattern>/nfts</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>RegisterServlet</servlet-name>
        <servlet-class>com.demo.nft.controller.RegisterServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RegisterServlet</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>com.demo.nft.controller.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ProfileServlet</servlet-name>
        <servlet-class>com.demo.nft.controller.ProfileServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ProfileServlet</servlet-name>
        <url-pattern>/profile</url-pattern>
    </servlet-mapping>

    <welcome-file-list>
        <welcome-file>home</welcome-file>
    </welcome-file-list>
</web-app>
